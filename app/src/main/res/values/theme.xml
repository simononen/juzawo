<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Appcelerator" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryDark</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>
        <item name="colorControlActivated">@color/colorActivated</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/primary</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
    </style>

    <style name="Theme.Appcelerator." parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
    </style>

    <style name="CMOptionsMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupBackground">#000</item>
    </style>
</resources>